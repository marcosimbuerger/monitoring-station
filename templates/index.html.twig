{% extends 'base.html.twig' %}

{% block body %}
    <table class="table mb-5">
        <thead class="thead-dark">
            <tr>
                <th scope="col">Name</th>
                <th scope="col">App</th>
                <th scope="col">App version</th>
                <th scope="col">PHP version</th>
            </tr>
        </thead>
        <tbody>
        {% for website in websiteData %}
            <tr>
                <td><a href="{{ website.url }}" target="_blank">{{ website.name }}</a></td>
                {% if website.app %}<td>{{ website.app }}</td>{% endif %}
                {% if website.versions.app %}<td>{{ website.versions.app }}</td>{% endif %}
                {% if website.versions.php %}<td>{{ website.versions.php }}</td>{% endif %}
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('logout') }}" class="btn btn-outline-warning">Logout</a>
{% endblock %}
